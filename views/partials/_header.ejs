<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="width: 100%; justify-content:left;">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav" style="width: 100%; justify-content:right;">
          <% if (user) { %>
            <p style="margin: auto; margin-right: 1em;">Hi <%= user.email %>!</p>
            <form class="form-inline" method="POST"action="/logout">
            <button type="submit" class="btn btn-secondary">Log Out</button>
            </form>  
            <% } else { %>
              <div><a class="nav-item nav-link" href="/login">Login</a></div>
              <div><a class="nav-item nav-link" href="/register">Register</a></div>
            <% } %>
        </div>
    </div>
  </nav>
</header>